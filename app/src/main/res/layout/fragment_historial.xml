<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HistorialFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="388dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp">



        <TextView
            android:id="@+id/cardTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="5dp"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:text="una tarjetita" />

        <TextView
            android:id="@+id/cardFishingTypeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:text="un tipo de pesca deuna vez que fui a pescar al lago" />

        <TextView
            android:id="@+id/cardDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_gravity="bottom"
            android:textColor="@color/black"
            android:text="una fecha" />



        <ImageView
            android:id="@+id/cardImageView"
            android:layout_width="156dp"
            android:layout_height="match_parent"
            android:src="@mipmap/pez"
            tools:src="@tools:sample/avatars" />

    </androidx.cardview.widget.CardView>

</FrameLayout>