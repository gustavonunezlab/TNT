<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.OptionsFragment">

    <Button
        android:id="@+id/myReportsButton"
        android:layout_width="262dp"
        android:layout_height="55dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="72dp"
        android:text="Mis reportes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/regulationsButton"
        android:layout_width="262dp"
        android:layout_height="55dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="28dp"
        android:text="Reglamentaciones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contestsButton" />

    <Button
        android:id="@+id/contestsButton"
        android:layout_width="262dp"
        android:layout_height="55dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="24dp"
        android:text="Concursos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newReportButton" />

    <Button
        android:id="@+id/newReportButton"
        android:layout_width="262dp"
        android:layout_height="55dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="24dp"
        android:text="Nuevo reporte"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myReportsButton" />

    <Button
        android:id="@+id/logOutButton"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="57dp"
        android:layout_marginBottom="44dp"
        android:text="Salir"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="308dp"
        android:layout_height="213dp"
        android:layout_marginTop="52dp"
        android:src="@drawable/barquitos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/regulationsButton" />


</androidx.constraintlayout.widget.ConstraintLayout>

